<div class="blog-list" {{action 'navigate' data}}>
  <div class="panel-body">
    <h2 class="blog-list-header">{{data.header}}</h2>
    <p class="blog-list-summary">
      {{data.summary}}
    </p>
    <div class="blog-list-footer">
      <span>Tags: </span>
      {{#each tagged as |tag|}}
        <span class="tags">{{tag}}</span>
      {{/each}}
      <span class="blog-list-date text-right">
        <span>Date: </span>{{moment-format timestamp 'MM/DD/YYYY'}}
      </span>
    </div>
  </div>
</div>
